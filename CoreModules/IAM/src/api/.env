# Configurações do Ambiente
IAM_API_HOST=0.0.0.0
IAM_API_PORT=8080
IAM_API_DEBUG=True
IAM_API_PRODUCTION=False

# Configurações de Segurança
IAM_API_SECRET_KEY=sua_chave_secreta_segura_aqui_para_ambiente_dev
IAM_API_ACCESS_TOKEN_EXPIRE_MINUTES=30
IAM_API_REFRESH_TOKEN_EXPIRE_DAYS=7
IAM_API_MFA_TOKEN_EXPIRE_MINUTES=5

# Configurações de CORS
IAM_API_CORS_ORIGINS=http://localhost,http://localhost:3000,http://localhost:8080

# Configurações de Banco de Dados
IAM_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/innovabiz
IAM_DATABASE_SCHEMA=iam
IAM_DATABASE_POOL_SIZE=5
IAM_DATABASE_MAX_OVERFLOW=10

# Configurações de Redis
IAM_REDIS_URL=redis://localhost:6379/0
IAM_REDIS_TTL=3600

# Configurações MFA
IAM_MFA_TOTP_ISSUER=INNOVABIZ
IAM_MFA_BACKUP_CODES_COUNT=10
IAM_MFA_BACKUP_CODES_LENGTH=8
IAM_MFA_MAX_ATTEMPTS=5

# Configurações AR/VR
IAM_AR_VR_CONTINUOUS_AUTH_THRESHOLD=0.7
IAM_AR_VR_AUTH_REEVALUATION_INTERVAL_SECONDS=30

# Configurações de Logging
IAM_LOG_LEVEL=INFO
# IAM_LOG_FILE=logs/iam_api.log

# Configurações de Auditoria
IAM_AUDIT_ENABLED=True
IAM_AUDIT_RETENTION_DAYS=365

# Configurações Multi-Tenant
IAM_DEFAULT_TENANT_ID=00000000-0000-0000-0000-000000000000
