            "iam-user-deletion-requests",
            "iam-data-subject-requests"
          ],
          "retention_policies": {
            "auth_logs": 180,
            "personal_data": 90,
            "consent_tracking": 730
          },
          "audit_settings": {
            "extensive_logging": true,
            "data_access_tracking": true
          }
        },
        "eidas": {
          "enabled": true,
          "authentication_level_topics": [
            "iam-eidas-auth-level-low",
            "iam-eidas-auth-level-substantial",
            "iam-eidas-auth-level-high"
          ]
        }
      },
      "data_residency": {
        "primary_region": "eu-central-1",
        "backup_regions": ["eu-west-1"],
        "cross_region_replication": false
      }
    },
