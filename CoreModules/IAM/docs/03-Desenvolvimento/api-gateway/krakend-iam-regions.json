      "description": "Configurações específicas para a União Europeia (Portugal)",
      "compliance": {
        "gdpr": true,
        "eidas": true,
        "privacy_by_default": true
      },
      "auth_settings": {
        "session_duration": 1800,
        "refresh_token_expiry": 2592000,
        "password_requirements": {
          "min_length": 12,
