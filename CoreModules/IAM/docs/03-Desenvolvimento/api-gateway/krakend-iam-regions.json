          "login": true,
          "registration": true,
          "password_reset": true,
          "device_tracking": true,
          "data_retention": true
        }
      },
      "rate_limits": {
        "login": {
          "max_rate": 10,
          "burst": 20,
          "period": "minute"
        },
        "mfa_verify": {
          "max_rate": 5,
          "burst": 10,
          "period": "minute"
        },
        "password_reset": {
          "max_rate": 3,
          "burst": 5,
          "period": "hour"
        }
      },
      "logging": {
        "mask_personal_data": true,
        "retention_period": 90,
        "log_auth_attempts": true
      },
      "headers": {
        "required": ["X-Tenant-Id", "X-Region-Code"],
        "privacy_policy_version": "X-Privacy-Policy-Version"
