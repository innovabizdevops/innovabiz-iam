{
  "endpoints": [
    {
      "endpoint": "/api/v1/multi-context/contexts",
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/api/v1/contexts",
          "host": [
            "http://multi-context-service:8080"
          ],
          "method": "GET",
          "encoding": "json"
        }
      ],
      "output_encoding": "json",
      "headers_to_pass": [
        "Authorization",
        "X-User-ID",
        "X-Tenant-ID",
        "X-User-Role",
        "X-User-Roles"
      ],
      "querystring_params": [
        "page",
        "pageSize",
        "sortBy",
        "sortDir",
        "type",
        "verificationLevel",
        "minTrustScore",
        "maxTrustScore",
        "includeDeleted"
      ],
      "extra_config": {
        "auth/validator": {
          "alg": "RS256",
          "jwk_url": "http://iam-service:8081/jwk/symmetric.json",
          "disable_jwk_security": false,
          "operation_debug": false,
          "cache": true,
          "cache_duration": 3600
        },
        "qos/ratelimit/router": {
          "max_rate": 100,
          "client_max_rate": 10,
          "strategy": "ip"
        },
        "security/cors": {
          "allow_origins": ["*"],
          "allow_methods": ["GET", "POST", "PUT", "DELETE", "PATCH"],
          "allow_headers": ["Origin", "Authorization", "Content-Type"],
          "expose_headers": ["Content-Length"],
          "max_age": 3600
        },
        "telemetry/logging": {
          "level": "INFO",
          "prefix": "[MULTI-CONTEXT]",
          "syslog": false,
          "stdout": true
        },
        "telemetry/metrics": {
          "collection_time": "60s",
          "listen_address": ":8090",
          "proxy_disabled": false,
          "router_disabled": false,
          "backend_disabled": false
        }
      }
    },
    {
      "endpoint": "/api/v1/multi-context/contexts",
      "method": "POST",
      "backend": [
        {
          "url_pattern": "/api/v1/contexts",
          "host": [
            "http://multi-context-service:8080"
          ],
          "method": "POST",
          "encoding": "json"
        }
      ],
      "output_encoding": "json",
      "headers_to_pass": ["Authorization", "X-User-ID", "X-Tenant-ID", "X-User-Role", "X-User-Roles"],
      "extra_config": {
        "auth/validator": {
          "alg": "RS256",
          "jwk_url": "http://iam-service:8081/jwk/symmetric.json",
          "disable_jwk_security": false,
          "operation_debug": false,
          "cache": true
        }
      }
    },
    {
      "endpoint": "/api/v1/multi-context/contexts/{id}",
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/api/v1/contexts/{id}",
          "host": [
            "http://multi-context-service:8080"
          ],
          "method": "GET",
          "encoding": "json"
        }
      ],
      "output_encoding": "json",
      "headers_to_pass": ["Authorization", "X-User-ID", "X-Tenant-ID", "X-User-Role", "X-User-Roles"],
      "extra_config": {
        "auth/validator": {
          "alg": "RS256",
          "jwk_url": "http://iam-service:8081/jwk/symmetric.json",
          "disable_jwk_security": false
        }
      }
    },
    {
      "endpoint": "/api/v1/multi-context/contexts/{id}/verification-history",
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/api/v1/contexts/{id}/verification-history",
          "host": [
            "http://multi-context-service:8080"
          ],
          "method": "GET",
          "encoding": "json"
        }
      ],
      "output_encoding": "json",
      "headers_to_pass": ["Authorization", "X-User-ID", "X-Tenant-ID", "X-User-Role", "X-User-Roles"],
      "extra_config": {
        "auth/validator": {
          "alg": "RS256",
          "jwk_url": "http://iam-service:8081/jwk/symmetric.json",
          "disable_jwk_security": false
        }
      }
    },
    {
      "endpoint": "/api/v1/multi-context/contexts/{id}/verification-level",
      "method": "PATCH",
      "backend": [
        {
          "url_pattern": "/api/v1/contexts/{id}/verification-level",
          "host": [
            "http://multi-context-service:8080"
          ],
          "method": "PATCH",
          "encoding": "json"
        }
      ],
      "output_encoding": "json",
      "headers_to_pass": ["Authorization", "X-User-ID", "X-Tenant-ID", "X-User-Role", "X-User-Roles"],
      "extra_config": {
        "auth/validator": {
          "alg": "RS256",
          "jwk_url": "http://iam-service:8081/jwk/symmetric.json",
          "disable_jwk_security": false,
          "roles": ["verifier", "admin"]
        },
        "validation/json-schema": {
          "type": "object",
          "required": ["level", "reason"],
          "properties": {
            "level": {"type": "string", "enum": ["LOW", "MEDIUM", "HIGH"]},
            "reason": {"type": "string", "minLength": 3},
            "evidence": {"type": "string"},
            "expiresAt": {"type": "string", "format": "date-time"}
          }
        }
      }
    },
    {
      "endpoint": "/api/v1/multi-context/contexts/{id}/trust-score",
      "method": "PATCH",
      "backend": [
        {
          "url_pattern": "/api/v1/contexts/{id}/trust-score",
          "host": [
            "http://multi-context-service:8080"
          ],
          "method": "PATCH",
          "encoding": "json"
        }
      ],
      "output_encoding": "json",
      "headers_to_pass": ["Authorization", "X-User-ID", "X-Tenant-ID", "X-User-Role", "X-User-Roles"],
      "extra_config": {
        "auth/validator": {
          "alg": "RS256",
          "jwk_url": "http://iam-service:8081/jwk/symmetric.json",
          "disable_jwk_security": false,
          "roles": ["trust_evaluator", "admin"]
        },
        "validation/json-schema": {
          "type": "object",
          "required": ["trustScore", "reason"],
          "properties": {
            "trustScore": {"type": "number", "minimum": 0, "maximum": 100},
            "reason": {"type": "string", "minLength": 3},
            "evidence": {"type": "string"}
          }
        }
      }
    }
  ]
}