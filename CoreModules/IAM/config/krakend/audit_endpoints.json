        "X-Request-ID"
      ],
      "input_query_strings": ["*"],
      "querystring_params": [
        "category",
        "start_date",
        "end_date",
        "resource_id",
        "resource_type",
        "user_id",
        "success",
        "severity",
        "correlation_id",
        "limit",
        "offset"
      ],
      "extra_config": {
        "auth/validator": {
          "alg": "RS256",
          "jwk_url": "http://keycloak:8080/auth/realms/innovabiz/protocol/openid-connect/certs",
          "cache": true,
