          "propagate_claims": [
            ["sub", "x-user-id"],
            ["name", "x-user-name"],
            ["email", "x-user-email"]
          ]
        },
        "qos/ratelimit/router": {
          "max_rate": 300,
          "strategy": "ip"
        },
        "security/cors": {
          "allow_origins": ["*"],
          "allow_methods": ["POST", "GET"],
          "allow_headers": ["Origin", "Authorization", "Content-Type"],
          "expose_headers": ["Content-Length"],
          "max_age": 3600
        }
      }
    },
    {
